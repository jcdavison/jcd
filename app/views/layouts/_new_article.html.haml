%section#create_article
  = form_for @article do |form|
    %p
      = form.label :title, :id => "label"
      = form.text_field :title, :size => "90"
    %p  
      = form.label :content
      = form.text_area :content, :style  => "height: 300px;" 
    %p
      = form.fields_for :tags do |tags|
        = tags.label :tags
        = tags.text_field :title, :size => "40", :name => "tag"
    %p
      = form.submit
